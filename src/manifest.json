{
  "manifest_version": 3,
  "name": "Christoffel",
  "version": "0.1.0",
  "description": "AI-powered text transformation assistant",
  "author": "염동환",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icons/icon19.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.tsx"
      ]
    }
  ],
  "icons": {
    "19": "icons/icon19.png",
    "48": "icons/icon48.png"
  },
  "commands": {
    "send-to-ai": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Send selected text to AI"
    },
    "toggle-christoffel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Christoffel window"
    },
    "resize-larger": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Make Christoffel window larger"
    },
    "resize-smaller": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Make Christoffel window smaller"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["profile/title.png", "profile/nchat.png"],
      "matches": ["<all_urls>"]
    }
  ]
} 